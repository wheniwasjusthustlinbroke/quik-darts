{
  "name": "quik-darts",
  "version": "1.1.0",
  "description": "Championship-style online darts game",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "node build.js",
    "build:dev": "cp index.html dist/",
    "build:vite": "tsc && vite build",
    "sync": "npm run build && npx cap sync",
    "ios": "npm run sync && npx cap open ios",
    "test": "cd functions && npm test",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:report": "npx playwright show-report",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:all": "npm run build && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wheniwasjusthustlinbroke/quik-darts.git"
  },
  "keywords": [
    "darts",
    "game",
    "multiplayer",
    "react",
    "typescript",
    "vite"
  ],
  "author": "Quik Darts",
  "license": "UNLICENSED",
  "dependencies": {
    "@capacitor-community/admob": "^8.0.0",
    "@capacitor-firebase/authentication": "^8.0.1",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "@playwright/test": "^1.57.0",
    "javascript-obfuscator": "^4.1.0"
  }
}
